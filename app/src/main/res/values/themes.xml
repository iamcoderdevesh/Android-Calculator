<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <!--    Light Mode -->
    <style name="screen">
        <item name="android:background">#FFF</item>
    </style>

    <!--    Text Color -->
    <style name="text">
        <item name="android:background">#FFF</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--    Button Background-->
    <style name="button">
        <item name="android:background">#9E9E9E</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="buttonStyle" parent="@style/Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">#E0E0E0</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="topbuttonStyle" parent="@style/Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">#757575</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="menu_icon">
        <item name="srcCompat">@drawable/menu</item>
        <item name="background">"?android:attr/actionBarItemBackground"</item>
    </style>

    <style name="Style_Dialog_Rounded_Corner" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:windowBackground">@drawable/dialog_rounded_corner</item>
        <item name="android:buttonStyle">@style/buttonStyle</item>
        <item name="android:windowMinWidthMinor">85%</item>
    </style>

</resources>